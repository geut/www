{
  "source": "src",
  "destination": "dest",
  "clean": false,
  "metadata": {
    "title": "Geut Studio",
    "description": "Custom JS Software Development Team. Code with opinions.",
    "logo": "/resources/images/logo.jpg",
    "url": "https://geutstudio.com",
    "favicon": "/resources/favicon.ico",
    "github": "geut",
    "twitter": "geutstudio"
  },
  "plugins": {
    "metalsmith-metadata": {
      "about": "data/about.yaml",
      "mission": "data/mission.yaml"
    },
    "metalsmith-markdown": true,
    "metalsmith-layouts": {
      "engine": "handlebars",
      "directory": "src/layouts",
      "partials": "src/partials",
      "pattern": "*.hbs",
      "rename": true
    },
    "metalsmith-in-place": {
      "engine": "handlebars",
      "partials": "src/partials"
    },
    "metalsmith-ignore": [
      "layouts/**/*",
      "partials/**/*",
      "resources/_browserify/**/*",
      "resources/_postcss/**/*"
    ],
    "metalsmith-watch": {
      "paths": {
        "${source}/**/*": true,
        "!src/resources/_browserify/**/*": true,
        "!src/resources/_postcss/**/*": true
      }
    }
  }
}
