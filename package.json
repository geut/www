{
  "name": "www",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "scripts": {
    "lint": "eslint ./src",
    "test": "echo \"Error: no test specified\" && exit 1",
    "postcss": "postcss --config=_resources/_postcss/config.js",
    "browserify": "mkdirp _resources/js && watchify _resources/_browserify/index.js -o 'exorcist _resources/js/index.js.map > _resources/js/index.js' -d",
    "server": "nodemon -e js,json,html,md --watch _templates --watch _site src/server --exec babel-node",
    "start": "npm run postcss & npm run browserify & npm run server"
  },
  "dependencies": {
    "babel": "^6.5.2",
    "babel-cli": "^6.14.0",
    "babel-core": "^6.14.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-object-assign": "^6.8.0",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-preset-es2015-node6": "^0.3.0",
    "boom": "^4.1.0",
    "crumb": "^6.0.3",
    "front-matter": "^2.1.0",
    "glue": "^4.0.0",
    "handlebars": "^4.0.5",
    "hapi": "^15.0.2",
    "inert": "^4.0.2",
    "joi": "^9.0.4",
    "markdown-it": "^7.0.1",
    "nodemon": "^1.10.2",
    "velocity-animate": "^1.2.3",
    "vision": "^4.1.0"
  },
  "devDependencies": {
    "autoprefixer": "^6.4.1",
    "babel-preset-es2015": "^6.16.0",
    "babelify": "^7.3.0",
    "btns": "^1.1.0",
    "eslint": "^3.4.0",
    "eslint-config-postcss": "^2.0.2",
    "exorcist": "^0.4.0",
    "joi-browser": "^9.1.0",
    "mkdirp": "^0.5.1",
    "postcss-cli": "^2.6.0",
    "postcss-clip-path-polyfill": "^1.0.4",
    "postcss-color-function": "^2.0.1",
    "postcss-custom-properties": "^5.0.1",
    "postcss-import": "^8.1.2",
    "postcss-media-minmax": "^2.1.2",
    "watchify": "^3.7.0",
    "whatwg-fetch": "^1.0.0"
  },
  "engines": {
    "node": ">=6.5.x"
  },
  "babel": {
    "presets": [
      "es2015-node6"
    ],
    "plugins": [
      "transform-object-assign",
      "transform-object-rest-spread",
      "add-module-exports"
    ]
  },
  "eslintConfig": {
    "extends": "postcss",
    "rules": {
      "max-len": 0,
      "no-shadow": 0
    },
    "env": {
      "browser": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true
      }
    }
  }
}
